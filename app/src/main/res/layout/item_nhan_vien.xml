<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/custom_item_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_maNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã thành viên: anv01"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_tenNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên thành viên: Nguyễn Văn A"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/imgbnt_deleteTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24" />

    </LinearLayout>


</LinearLayout>